@model ASPNETMVC.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>@Model.Genre.Name</li>
    <li>ReleaseDate:@Model.ReleaseDate.ToShortDateString()</li>
    <li>Date Added:@Model.DateAdded</li>
    <li>NumberInStock:@Model.NumberInStock</li>
</ul>
